<?xml version="1.0" encoding="UTF-8"?>
<project default="core" basedir="loader" name="Lucee" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

  <property name="version" value="5.3.2.17-SNAPSHOT-clean"/>

  <path id="maven-ant-tasks.classpath" path="../ant/lib/maven-ant-tasks-2.1.3.jar" />
  <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
           uri="antlib:org.apache.maven.artifact.ant"
           classpathref="maven-ant-tasks.classpath" />

  <import file="./ant/build-only-core.xml"/>


  <target name="withTestcases">
    <property name="testcases" value="true"/>
  </target>

  <target name="setEnv">
      <artifact:pom id="pom" file="pom.xml" />

      <!-- dependecies -->
      <artifact:dependencies filesetId="mydeps" pomRefId="pom" />
      <pathconvert property="dependencies" refid="mydeps"/>

      <property name="runtime_classpath" value="${java.class.path}:${dependencies}"/>
      <property name="outputDir" location="target/classes"/>
      <property name="target" location="target"/>
      <property name="baseDir" location=".."/>
      <property name="rootDir" location=".."/>

  </target> 

  <target name="fastdev" depends="setEnv,buildLoaderAnt" description="build only Lucee itself">

  </target>
  
  <target name="fastdevjar" depends="setEnv,buildLoaderAnt,buildFullLuceeJar" description="build only Lucee itself">

  </target>
  
</project>